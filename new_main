class User:

    def __init__(self, firstname, lastname, id, password, username, email):
        self.firstname = firstname
        self.lastname = lastname
        self.id = id
        self.password = password
        self.username = username
        self.email = email

    def setfirstname(self, firstname):
        if firstname != "":
            self.firstname = firstname
            return self.firstname

    def setlastname(self, lastname):
        if lastname != "":
            self.lastname = lastname
            return self.lastname

    def setid(self, id):
        if id != "":
            self.id = id
            return self.id

    def setpassword(self, password):
        if password != "":
            self.password = password
            return self.id

    def setusername(self, username):
        if username != "":
            self.username = username
            return self.username

    def setmail(self, mail):
        if mail != "":
            self.mail = mail
            return self.mail

    def getmail(self, mail):
        if mail != "":
            self.mail = mail
            return self.mail

    def getusername(self, username):
        if username != "":
            self.username = username
            return self.username

    def getID(self, ID):
        if ID != "":
            self.ID = ID
            return self.ID

    def getpassword(self, password):
        if password != "":
            self.password = password
            return self.password

    def getfirstname(self, firstname):
        if firstname != "":
            self.firstname = firstname
            return self.firstname

    def getlastname(self, lastname):
        if lastname != "":
            self.lastname = lastname
            return self.lastname

class Student(User):

    def __init_(self, firstname, lastname, id, password, username, email, courses, assignment, gpa):
        self.courses = courses
        self.assignment = assignment
        self.gpa = gpa
        User.__init__(self, firstname, lastname, id, password, username, email)

    def setcourses(self, courses):
        self.courses = courses
        return self.courses

    def setassignment(self, assignment):
        self.assignment = assignment
        return self.assignment

    def setgpa(self, gpa):
        self.gpa = gpa
        return self.gpa

    def getgpa(self, gpa):
        self.gpa = gpa
        return self.gpa

    def getassignment(self, assignment):
        self.assignment = assignment
        return self.assignment

    def getcourses(self, courses):
        self.courses = courses
        return self.courses

class Lecturer(User):

    def __init__(self, firstname, lastname, id, password, username, email, office):
        self.office = office
        User.__init__(self, firstname, lastname, id, password, username, email)

    def setoffice(self, office):
        self.office = office
        return self.office

    def getoffice(self, office):
        self.office = office
        return self.office

class Grade: 
    min = 0
    max = 100

    def __init__(self, grade):
        self.grade = grade

    def _get_(self):
            return self.grade

    def _set_(self, grade):
        self.grade = grade
        return self.grade

    def displayGrade (self) :
        print " the grade is" , self.grade

    def is_Valid (self) :
        if self.grade <= self.max  and self.grade > self.min:
            print "Not valid"
        else:
            print "Not valid"


class Assignment:
    min = 0
    max = 100

    def __init__(self, name, percentage, grade, deadline, status, desciprion):
        self.name = name
        self.percentage = percentage
        self.grade = grade
        self.deadline = deadline
        self.status = status
        self.description = description

    def setname(self, name):
        self.name = name
        return self.name

    def setpercentage(self, percantage):
        self.percentage = percantage
        return self.percantage

    def setgrade(self, grade):
        self.grade = grade
        return self.grade

    def setdeadline(self, deadline):
        self.deadline = deadline
        return self.deadline

    def setstatus(self, status):
        self.status = status
        return self.status

    def setdescription(self, description):
        self.description = description
        return self.description

    def getname(self, name):
        self.name = name
        return self.name

    def getpercentage(self, percantage):
        self.percatage = percantage
        return self.percantage

    def getgrade(self, grade):
        self.grade = grade
        return self.grade

    def getdeadline(self, deadline):
        self.deadline = deadline
        return self.deadline

    def getstatus(self, status):
        self.status = status
        return self.status

    def getdescription(self, description):
        self.description = description
        return self.description

    def is_Late(self):
        return self

    def is_Graded(self):
        return self


class AssignmentGrade:

    def __init__(self, course, assignment, grade):
        self.course = course
        self.assignment = assignment
        self.grade = Grade(grade)
        self.state = 0
        
def main():
    c1 = Course("ENGS115")

    asgn1 = Assignment("Assignment1", "Assign1Text", 20, "2018-09-16")
    c1.assignments.append(asgn1)

    st1 = Student("Marianna", "ENGS115")
    st1.courses.append(c1)

    asggrade1 = AssignmentGrade(c1, asgn1, 3)
    st1.grades.append(asggrade1)

    st1.displayGrades()

    asgn1.name = "AAAA"
    st1.displayGrades()


main()
